<div class="large-12">
  <h3>Patients</h3>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.user.first_name %></td>
          <td><%= link_to 'Show', dashboard_patient_path(patient) %></td>
          <td><%= link_to 'Edit', edit_dashboard_patient_path(patient) %></td>
          <td><%= link_to 'Destroy', dashboard_patient_path(patient), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Patient', new_dashboard_patient_path %>
</div>